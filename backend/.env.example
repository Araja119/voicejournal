# ===========================================
# VoiceJournal Backend - Environment Variables
# ===========================================

# Server
PORT=3000
NODE_ENV=development  # development | production

# Database
# Development (SQLite — requires provider = "sqlite" in schema.prisma):
# DATABASE_URL="file:./dev.db"
# Production (PostgreSQL — set by Railway addon):
# DATABASE_URL="postgresql://user:password@host:5432/dbname?sslmode=require"
DATABASE_URL="file:./dev.db"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-in-production
REFRESH_TOKEN_EXPIRES_IN=7d

# App URLs
APP_URL=http://localhost:3000
WEB_APP_URL=http://localhost:3000
# Production:
# APP_URL=https://api.voicejournal.app
# WEB_APP_URL=https://voicejournal.app

# File Storage
# Provider: leave unset for local mock, or set to "r2" for Cloudflare R2
# STORAGE_PROVIDER=r2
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800

# Cloudflare R2 (required when STORAGE_PROVIDER=r2)
# R2_ACCOUNT_ID=your-cloudflare-account-id
# R2_ACCESS_KEY_ID=your-r2-access-key
# R2_SECRET_ACCESS_KEY=your-r2-secret-key
# R2_BUCKET_NAME=voicejournal

# Email
# Provider: leave unset for console mock, or set to "resend" for Resend
# EMAIL_PROVIDER=resend
EMAIL_FROM=noreply@voicejournal.app
# RESEND_API_KEY=re_xxxxxxxxxxxx

# Twilio SMS (mock in dev)
TWILIO_ACCOUNT_SID=mock
TWILIO_AUTH_TOKEN=mock
TWILIO_PHONE_NUMBER=+15551234567

# Push Notifications (mock in dev)
APNS_KEY_ID=mock
APNS_TEAM_ID=mock

# AI (Anthropic Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
